@using System.Web.Mvc.Html
<!DOCTYPE html>

<html>
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>Team Nordahl</title>

	<!-- *** CSS *** -->
	<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
	<link href="~/styles/_LayoutPageStyle.css" rel="stylesheet" />
	@RenderSection("styles", required: false)

	<script src="~/Scripts/modernizr-2.8.3.js"></script>

	<!-- *** FONTS *** -->
	<link href='http://fonts.googleapis.com/css?family=Quattrocento' rel='stylesheet' type='text/css'>
	<link href='http://fonts.googleapis.com/css?family=Quattrocento+Sans' rel='stylesheet' type='text/css'>

</head>
<body>
	<nav class="layoutPageNavbar navbar navbar-inverse navbar-static-top">
		@Html.Partial("~/Views/Home/_Header.cshtml")
	</nav>

	<div class="mainContent">
		@RenderBody()
	</div>

	<footer class="footer">
		@Html.Partial("~/Views/Home/_Footer.cshtml")
	</footer>

	<!-- *** JAVASCRIPT *** -->
	<script src="~/Scripts/jquery-1.9.1.min.js"></script>
	<script src="~/Scripts/bootstrap.min.js"></script>
	@RenderSection("scripts", required: false)

</body>
</html>
